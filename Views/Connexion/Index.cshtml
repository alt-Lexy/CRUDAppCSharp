@model Login
@section title {
	<h1>Hello sign in</h1>
}


<form method="post" asp-controller="auth" asp-action="login">
	<div class="row mb-3">
		<div class="col-2">
			<label asp-for="Username" class="col-form-label"></label>
		</div>
		<div class="col-6">
			<input type="text" asp-for="Username" class="form-control" />
		</div>
	</div>
	<div class="row mb-3">
		<div class="col-2">
			<label asp-for="Password" class="col-form-label"></label>
		</div>
		<div class="col-6">
			<input type="text" asp-for="Password" class="form-control" />
		</div>
	</div>
	<div class="text-danger" asp-validation-summary="All"></div>
	<div class="row mb-3">
		<div class="col-2">
			<input type="submit" class="btn bg-primary" value="Connect" />
		</div>
		<div class="col-6">
		</div>
	</div>
</form>